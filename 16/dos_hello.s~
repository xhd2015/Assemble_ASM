	.code16
	.global _start
	.text
	
_start:
	movw %cs,%ax
	movw %ax,%ds /*set ds=cs */
	movw %ax,%ss /*set ss=cs */

	movw $stack,%ax
	movw %ax,%sp	/* set sp */
	#====== Init Done !!! =====

	pushw $15
	
	
	
	
	#=== Return to dos
	movw $0x4c00,%ax
	int $0x21
message:	.string "Hello , world!\n\0"
length = . - message
display_str:
	pushw %bp
	movw 4(%esp),%ax /* str */
	movw %ax,%bp
	movw 6(%esp),%cx /* length */
	movw $0x1301,%ax
	movw $0x000c,%bx
	movb $0x0,%dl
	int %0x10
	popw %bp
	ret
	.org 0x100
stack:	/* the buttom of the stack */
